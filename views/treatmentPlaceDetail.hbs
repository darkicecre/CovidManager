            <div class="panel-heading">
                <h3 class="panel-title">Danh sách người liên quan</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-xs-12">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th style="width:40%">HỌ TÊN</th>
                                    <th style="width:10%" >CMND</th>
                                    <th style="width:40%">ĐỊA CHỈ</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{!-- {{#each patient}} --}}
                                <tr>
                                    <td>{{name}}</td>
                                    <td>{{identity_card}}</td>
                                    <td>{{address}}</td>
                                </tr>
                                {{!-- {{/each}} --}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-12">
        <div class="panel panel-primary">
